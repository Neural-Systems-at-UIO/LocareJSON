{
  "$id": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.0.0/schemas/locareCollection.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LocareJSON",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "LocareJSON"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d\\.\\d(?:\\.\\d+)*$"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "targetAtlas": {
          "type": "object",
          "properties": {
            "commonCoordinateSpaceVersion": {
              "type": "string",
              "format": "uri"
            },
            "coordinateOrigin": {
              "type": "object",
              "properties": {
                "dimensions": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  },
                  "minItems": 3,
                  "maxItems": 3
                },
                "resolution": {
                  "type": "string"
                },
                "x": {
                  "type": "string"
                },
                "y": {
                  "type": "string"
                },
                "z": {
                  "type": "string"
                },
                "origo": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  },
                  "minItems": 3,
                  "maxItems": 3
                }
              },
              "required": [
                "dimensions",
                "resolution",
                "x",
                "y",
                "z",
                "origo"
              ]
            }
          },
          "required": [
            "commonCoordinateSpaceVersion",
            "coordinateOrigin"
          ]
        },
        "sourcePublication": {
          "type": "string",
          "format": "uri"
        },
        "relatedPublications": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "linkedURI": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "targetAtlas",
        "sourcePublication"
      ]
    },
    "LocareCollection": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.0.0/schemas/locareSphere.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.0.0/schemas/locarePoint.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.0.0/schemas/locareCylinder.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.0.0/schemas/locareLineString.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.0.0/schemas/locarePolygon.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.0.0/schemas/locarePolyhedron.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.0.0/schemas/locareAtlasMesh.schema.json"
          }
        ]
      }
    }
  },
  "required": [
    "type",
    "version",
    "metadata",
    "LocareCollection"
  ]
}