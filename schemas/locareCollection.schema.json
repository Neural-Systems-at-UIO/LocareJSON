{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LocareJSON",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "LocareJSON"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d\\.\\d(?:\\.\\d+)*$"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "commonCoordinateSpaceVersion": {
          "type": "string",
          "format": "uri"
        },
        "sourcePublication": {
          "type": "string",
          "format": "uri"
        },
        "relatedPublications": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "linkedURI": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "commonCoordinateSpaceVersion",
        "sourcePublication"
      ]
    },
    "LocareCollection": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "./schemas/locareSphere.schema.json"
          },
          {
            "$ref": "./schemas/locarePoint.schema.json"
          },
          {
            "$ref": "./schemas/locareCylinder.schema.json"
          },
          {
            "$ref": "./schemas/locareLineString.schema.json"
          },
          {
            "$ref": "./schemas/locarePolygon.schema.json"
          },
          {
            "$ref": "./schemas/locarePolyhedron.schema.json"
          }
        ]
      }
    }
  },
  "required": [
    "type",
    "version",
    "metadata",
    "LocareCollection"
  ]
}