{
  "$id": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.1.0/schemas/locareCollection.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LocareJSON",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "LocareJSON"
      ]
    },
    "version": {
      "type": "string",
      "enum": ["v1.1.0"]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "targetAtlas": {
          "type": "object",
          "properties": {
            "commonCoordinateSpaceVersion": {
              "type": "string",
              "format": "uri"
            },
            "coordinateSpaceSetup": {
              "type": "object",
              "properties": {
                "dimensions": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  },
                  "minItems": 3,
                  "maxItems": 3
                },
                "resolution": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "string"
                    }
                  }
                },
                "orientation":  {
                  "type": "string",
                  "pattern": "^[a-zA-Z]{3}$",
                  "description": "Using the anatomical coordinate system explained here: https://www.slicer.org/wiki/Coordinate_systems"
                },
                "origin": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  },
                  "minItems": 3,
                  "maxItems": 3
                }
              },
              "required": [
                "dimensions",
                "resolution",
                "orientation",
                "origin"
              ]
            }
          },
          "required": [
            "commonCoordinateSpaceVersion",
            "coordinateSpaceSetup"
          ]
        },
        "sourcePublication": {
          "type": "string",
          "format": "uri"
        },
        "relatedPublications": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "linkedURI": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "targetAtlas",
        "sourcePublication"
      ]
    },
    "LocareCollection": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.1.0/schemas/locareSphere.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.1.0/schemas/locarePoint.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.1.0/schemas/locareCylinder.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.1.0/schemas/locareLineString.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.1.0/schemas/locarePolygon.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.1.0/schemas/locarePolyhedron.schema.json"
          },
          {
            "$ref": "https://raw.githubusercontent.com/blixilla/LocareJSON/v1.1.0/schemas/locareAtlasMesh.schema.json"
          }
        ]
      }
    }
  },
  "required": [
    "type",
    "version",
    "metadata",
    "LocareCollection"
  ]
}