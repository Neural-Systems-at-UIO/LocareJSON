{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Polyhedron",
  "type": "object",
  "properties": {
    "geometry": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Polyhedron"
          ]
        },
        "coordinates": {
          "type": "object",
          "properties": {
            "vertices": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "number"
                },
                "minItems": 3,
                "maxItems": 3
              },
              "minItems": 4
            },
            "faces": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "integer"
                },
                "minItems": 3
              },
              "minItems": 4
            }
          },
          "required": [
            "vertices",
            "faces"
          ]
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "properties": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "LocareObject"
          ]
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "linkedURI": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "type",
        "name",
        "description"
      ]
    }
  },
  "required": [
    "geometry",
    "properties"
  ]
}