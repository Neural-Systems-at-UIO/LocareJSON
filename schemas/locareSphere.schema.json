{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LocareSphere",
  "type": "object",
  "properties": {
    "geometry": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Sphere"
          ]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        },
        "radius": {
          "type": "object",
          "properties": {
            "value": {
              "type": "number"
            },
            "unit": {
              "type": "string"
            }
          },
          "required": [
            "value",
            "unit"
          ]
        }
      },
      "required": [
        "type",
        "coordinates",
        "radius"
      ]
    },
    "properties": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "LocareObject"
          ]
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "linkedURI": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "type",
        "name",
        "description"
      ]
    }
  },
  "required": [
    "geometry",
    "properties"
  ]
}